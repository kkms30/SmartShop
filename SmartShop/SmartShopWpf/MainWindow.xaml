<Window x:Class="SmartShopWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartShopWpf"
        mc:Ignorable="d"
        Background="Black"
        ResizeMode="NoResize"
        Title="MainWindow" Height="729" Width="1131">

    <Grid Background="{StaticResource Obramowanie}" Height="698" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="1123">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid   x:Name="GridPasekGorny"    HorizontalAlignment="Left" VerticalAlignment="Top" Height="28"  Width="1000" Margin="59,37,0,0"  Background="{StaticResource Szary}"/>
        <Label  x:Name="lblNrKasyNapis"    HorizontalAlignment="Left" VerticalAlignment="Top" Height="28"  Width="135"  Margin="604,37,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,0,1" BorderBrush="{StaticResource Bialy}" Content="Numer Kasy:"    Style="{StaticResource LblFont12.5}"    HorizontalContentAlignment="Center"/>
        <Label  x:Name="lblNrKasy"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="28"  Width="48"   Margin="739,37,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="0,1,1,1" BorderBrush="{StaticResource Bialy}" Content=""               Style="{StaticResource LblFont12.5}"    HorizontalContentAlignment="Center"/>
        <Label  x:Name="lblNrKasjeraNapis" HorizontalAlignment="Left" VerticalAlignment="Top" Height="28"  Width="135"  Margin="786,37,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,0,1" BorderBrush="{StaticResource Bialy}" Content="Numer Kasjera:" Style="{StaticResource LblFont12.5}"    HorizontalContentAlignment="Center"/>
        <Label  x:Name="lblNrKasjera"      HorizontalAlignment="Left" VerticalAlignment="Top" Height="28"  Width="48"   Margin="921,37,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="0,1,1,1" BorderBrush="{StaticResource Bialy}" Content=""               Style="{StaticResource LblFont12.5}"    HorizontalContentAlignment="Center"/>
        <Button x:Name="btnWyloguj"        HorizontalAlignment="Left" VerticalAlignment="Top" Height="28"  Width="91"   Margin="968,37,0,0" Background="{StaticResource Czerwony}"     BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="Wyloguj"        Style="{StaticResource BtnFontRed12.5}" HorizontalContentAlignment="Center"/>

        <Label    x:Name="lblPodsumowanie" HorizontalAlignment="Left" VerticalAlignment="Top" Height="47"  Width="497"  Margin="85,84,0,0"  Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="0" Style="{StaticResource LblFont26}" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"  TextOptions.TextFormattingMode="Display"/>

        <ListView x:Name="lstVKoszyk"      HorizontalAlignment="Left" VerticalAlignment="Top" Height="323" Width="497"  Margin="85,130,0,0" Background="{StaticResource Czerwony}"     BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" OpacityMask="{StaticResource Bialy}"  >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button x:Name="btnZaznaczWszystkie" HorizontalAlignment="Left" VerticalAlignment="Top" Height="28"  Width="497" Margin="85,452,0,0"  Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="Zaznacz Wszystkie"  Style="{StaticResource BtnFontOrange18}" />
        <Button x:Name="btnUsun"             HorizontalAlignment="Left" VerticalAlignment="Top" Height="50"  Width="249" Margin="85,479,0,0"  Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="Usuń"               Style="{StaticResource BtnFontOrange30}"/>
        <Button x:Name="btnEdytuj"           HorizontalAlignment="Left" VerticalAlignment="Top" Height="50"  Width="249" Margin="333,479,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="Edytuj"             Style="{StaticResource BtnFontOrange30}"/>
        <Button x:Name="btnZnizka"           HorizontalAlignment="Left" VerticalAlignment="Top" Height="50"  Width="249" Margin="85,528,0,0"  Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="Zniżka"             Style="{StaticResource BtnFontOrange30}"/>
        <Button x:Name="btnVat"              HorizontalAlignment="Left" VerticalAlignment="Top" Height="50"  Width="249" Margin="333,528,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="VAT"                Style="{StaticResource BtnFontOrange30}"/>
        <Button x:Name="btnPodsumowanie"     HorizontalAlignment="Left" VerticalAlignment="Top" Height="47"  Width="497" Margin="85,577,0,0"  Background="{StaticResource Czerwony}"     BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="Podsumowanie"       Style="{StaticResource BtnFontRed30}"/>


        <TabControl x:Name="tabObsluga" HorizontalAlignment="Left" VerticalAlignment="Top" Height="540" Width="430"  Margin="604,84,0,0" Background="{StaticResource Czarny}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}">

            <TabItem Header="Kod Ręcznie" HorizontalAlignment="Left"  VerticalAlignment="Top"  Height="22" Width="80" Margin="-2,1,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Style="{StaticResource TabItmFontOrange12.5}"  >

                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="507" Width="425"  Margin="0,10,0,0" Background="{StaticResource Czarny}">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="lblKodRecznieNaglowekKodu"   HorizontalAlignment="Left" VerticalAlignment="Top" Height="34" Width="376" Margin="24,14,0,0" Background="{StaticResource Czerwony}" BorderThickness="1,1,1,0" BorderBrush="{StaticResource Bialy}" Content="Kod produktu"  Style="{StaticResource LblFont14}" HorizontalContentAlignment="Center" TextOptions.TextFormattingMode="Display"/>
                    <Label x:Name="lblKodRecznieWpisywanieKodu" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="376" Margin="24,48,0,0" Background="{StaticResource Czerwony}" BorderThickness="1,0,1,1" BorderBrush="{StaticResource Bialy}" Content="0"             Style="{StaticResource LblFont36}" HorizontalContentAlignment="Right"  TextOptions.TextFormattingMode="Display" />

                    <Button x:Name="btn1"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="126" Margin="24,127,0,0"  Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="1"         Style="{StaticResource BtnFontOrange30}"/>
                    <Button x:Name="btn2"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="126" Margin="149,127,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="2"         Style="{StaticResource BtnFontOrange30}"/>
                    <Button x:Name="btn3"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="126" Margin="274,127,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="3"         Style="{StaticResource BtnFontOrange30}"/>
                    <Button x:Name="btn4"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="126" Margin="24,214,0,0"  Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="4"         Style="{StaticResource BtnFontOrange30}"/>
                    <Button x:Name="btn5"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="126" Margin="149,214,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="5"         Style="{StaticResource BtnFontOrange30}"/>
                    <Button x:Name="btn6"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="126" Margin="274,214,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="6"         Style="{StaticResource BtnFontOrange30}"/>
                    <Button x:Name="btn7"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="126" Margin="24,301,0,0"  Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="7"         Style="{StaticResource BtnFontOrange30}"/>
                    <Button x:Name="btn8"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="126" Margin="149,301,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="8"         Style="{StaticResource BtnFontOrange30}"/>
                    <Button x:Name="btn9"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="126" Margin="274,301,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="9"         Style="{StaticResource BtnFontOrange30}"/>
                    <Button x:Name="btnC"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="63"  Margin="24,388,0,0"  Background="{StaticResource Czerwony}"     BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="C"         Style="{StaticResource BtnFontRed30}"/>
                    <Button x:Name="btnBackspace" HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="63"  Margin="87,388,0,0"  Background="{StaticResource Czerwony}"     BorderThickness="0,1,1,1" BorderBrush="{StaticResource Bialy}" Content="&#xE112;"  Style="{StaticResource BtnFontRed30}" FontFamily="Segoe UI Symbol" />
                    <Button x:Name="btn0"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="126" Margin="149,388,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="0"         Style="{StaticResource BtnFontOrange30}"/>
                    <Button x:Name="btnDodaj"     HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" Width="126" Margin="274,388,0,0" Background="{StaticResource Czerwony}"     BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="Dodaj"     Style="{StaticResource BtnFontRed30}"/>
                </Grid>
            </TabItem>

            <TabItem Header="Kod z Listy" HorizontalAlignment="Left"  VerticalAlignment="Top"  Height="22" Width="80" Margin="-3,1,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Style="{StaticResource TabItmFontOrange12.5}">

                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="507" Width="425"  Margin="0,10,0,0" Background="{StaticResource Czarny}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtZListyWyszukiwarka" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="45" Width="333" Margin="24,14,0,0"  Background="{StaticResource Czerwony}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Style="{StaticResource TxtFont26}" />
                    <Button  x:Name="btnZListyWyszukaj"     HorizontalAlignment="Left"  VerticalAlignment="Top" Height="45" Width="43"  Margin="357,14,0,0" Background="{StaticResource Lupa}"     BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}"/>

                    <ListView x:Name="listVZListyListaDostepnychProduktow" HorizontalAlignment="Left" VerticalAlignment="Top" Height="363"  Width="376" Margin="24,58,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="btntabZListyDodaj"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="56" Width="376" Margin="24,420,0,0" Background="{StaticResource Czerwony}"     BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="Dodaj" Style="{StaticResource BtnFontRed30}"  />
                </Grid>
            </TabItem>

            <TabItem Header="Top 10" HorizontalAlignment="Left"  VerticalAlignment="Top"  Height="22" Width="65" Margin="-4,1,0,0" Background="{StaticResource Czerwony}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Style="{StaticResource TabItmFontRed12.5}">

                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="507" Width="425"  Margin="0,10,0,0" Background="{StaticResource Czarny}">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <ListView x:Name="listVTop10ListaTop10" HorizontalAlignment="Left" VerticalAlignment="Top" Height="462"  Width="376" Margin="24,14,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>

            <TabItem Header="Zwroty" HorizontalAlignment="Left"  VerticalAlignment="Top"  Height="22" Width="65" Margin="-5,1,0,0"  Background="{StaticResource Czerwony}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Style="{StaticResource TabItmFontRed12.5}">

                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="507" Width="425"  Margin="0,10,0,0" Background="{StaticResource Czarny}">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtZwrotyIdTransakcji" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="45" Width="333" Margin="24,14,0,0"  Background="{StaticResource Czerwony}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Style="{StaticResource TxtFont26}" />
                    <Button  x:Name="btnZwrotyWyszukaj"     HorizontalAlignment="Left"  VerticalAlignment="Top" Height="45" Width="43"  Margin="357,14,0,0" Background="{StaticResource Lupa}"     BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}"/>

                    <ListView x:Name="listVZwortyListaProduktowDoZwrotu" HorizontalAlignment="Left" VerticalAlignment="Top" Height="336"  Width="376" Margin="24,58,0,0" Background="{StaticResource Pomaranczowy}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="btnZwrotyZaznaczWszystkie" HorizontalAlignment="Left" VerticalAlignment="Top" Height="28" Width="376" Margin="24,393,0,0" Background="{StaticResource Czerwony}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="Zaznacz Wszystkie" Style="{StaticResource BtnFontRed18}" />
                    <Button x:Name="btntabZwrotyZwroc"         HorizontalAlignment="Left" VerticalAlignment="Top" Height="56" Width="376" Margin="24,420,0,0" Background="{StaticResource Czerwony}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Content="Zwróć"             Style="{StaticResource BtnFontRed30}" />
                </Grid>
            </TabItem>

            <TabItem Header="Raporty"  HorizontalAlignment="Left" VerticalAlignment="Top"  Height="22" Width="65" Margin="-6,1,0,0"  Background="{StaticResource Czerwony}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Style="{StaticResource TabItmFontRed12.5}">

                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="507" Width="425"  Margin="0,10,0,0" Background="{StaticResource Czarny}">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>

            <TabItem Header="Transakcje" HorizontalAlignment="Left" VerticalAlignment="Top"  Height="22" Width="71" Margin="-7,1,0,0"  Background="{StaticResource Czerwony}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource Bialy}" Style="{StaticResource TabItmFontRed12.5}"    >

                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="507" Width="425"  Margin="0,10,0,0" Background="{StaticResource Czarny}">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>