<Window x:Class="SmartShopWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartShopWpf"
        mc:Ignorable="d"
        Background="Black"
        Title="MainWindow" Height="660" Width="990">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="561"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="D:\GitRep\SmartShop\SmartShop\SmartShopWebApp\Images\display2.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <TabControl x:Name="tabObsluga" HorizontalAlignment="Left" Height="533" Margin="479,0,0,0" VerticalAlignment="Top" Width="430" Background="Black" Grid.RowSpan="2" Grid.Row="1">
            <TabItem Header="TabReczny">
                <Grid Background="Black" Margin="0,12,-1,-1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="33*"/>
                        <RowDefinition Height="427*"/>
                        <RowDefinition Height="33*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="354*"/>
                        <ColumnDefinition Width="40*"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="lblKod" Content="Label" HorizontalAlignment="Left" Height="102" Margin="1,1,0,0" VerticalAlignment="Top" Width="346" Background="DarkRed" Grid.Column="1" Grid.Row="1"/>

                    <Button x:Name="btn1" Content="1"  Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="116" Margin="1,103,0,0" Grid.Column="1" Grid.Row="1"  />
                    <Button x:Name="btn2" Content="2"  Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="116" Margin="116,103,0,0" Grid.Column="1" Grid.Row="1"  />
                    <Button x:Name="btn3" Content="3"  Background="Darkorange" HorizontalAlignment="Right" VerticalAlignment="Top" Height="82" Width="116" Margin="0,103,0,0" Grid.Column="1" Grid.Row="1"   />
                    <Button x:Name="btn4" Content="4"  Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="116" Margin="1,184,0,0" Grid.Column="1" Grid.Row="1"   />
                    <Button x:Name="btn5" Content="5"  Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="116" Margin="116,184,0,0" Grid.Column="1" Grid.Row="1"  />
                    <Button x:Name="btn6" Content="6"  Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="116" Margin="231,184,0,0" Grid.Column="1" Grid.Row="1"  />
                    <Button x:Name="btn7" Content="7"  Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="116" Margin="1,265,0,0" Grid.Column="1" Grid.Row="1"   />
                    <Button x:Name="btn8" Content="8"  Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="116" Margin="116,265,0,0" Grid.Column="1" Grid.Row="1"  />
                    <Button x:Name="btn9" Content="9"  Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="116" Margin="231,265,0,0" Grid.Column="1" Grid.Row="1"  />

                    <Button x:Name="btnC"         Content="C"           Background="Darkred"    HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="116" Margin="1,346,0,0" Grid.Column="1" Grid.Row="1"   />
                    <Button x:Name="btn0"         Content="0"           Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="116" Margin="116,346,0,0" Grid.Column="1" Grid.Row="1"  />
                    <Button x:Name="btnBackSpace" Content="Backspace"   Background="Darkred"    HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="116" Margin="231,346,0,0" Grid.Column="1" Grid.Row="1"  />
                </Grid>
            </TabItem>
            <TabItem Header="TabZListy">
                <Grid Background="#FFE5E5E5" Margin="0,0,4,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="171*"/>
                        <ColumnDefinition Width="196*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>


        <Label  x:Name="lblNrKasyNapis"    Content="Numer Kasy:"    Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="77"  Margin="53,0,0,0"  Grid.Row="1" FontSize="10"></Label>
        <Label  x:Name="lblNrKasy"         Content=""               Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="47"  Margin="130,0,0,0" Grid.Row="1"  ></Label>
        <Button x:Name="btnWyloguj"        Content="Wyloguj"        Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="172" Margin="177,0,0,0" Grid.Row="1" BorderThickness="1,0" />
        <Label  x:Name="lblNrKasjeraNapis" Content="Numer Kasjera:" Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="77"  Margin="349,0,0,0" Grid.Row="1" FontSize="10"/>
        <Label  x:Name="lblNrKasjera"      Content=""               Background="Darkorange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="47"  Margin="426,0,0,0" Grid.Row="1" />

        <ListView x:Name="lstVKoszyk" HorizontalAlignment="Left" Height="311" Margin="52,0,0,0" VerticalAlignment="Top" Width="422" Background="DarkRed" OpacityMask="#FF341414" BorderBrush="{x:Null}" Grid.Row="2" BorderThickness="1,0,1,1">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>


        <Grid HorizontalAlignment="Left" Height="127" Margin="52,316,0,0" Grid.Row="2" VerticalAlignment="Top" Width="215" Background="DarkOrange">
            <CheckBox    x:Name="checkBoxZnizka"      Content="Znizka"     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0" />
            <RadioButton x:Name="rdbZnizkaPojedyncza" Content="Pojedyncza" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,35,0,0" />
            <RadioButton x:Name="rdbZnizkaCalosciowa" Content="Calosciowa" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="91,35,0,0" />
            <RadioButton x:Name="rdbZnizkaProcentowa" Content="Procentowa" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,55,0,0" />
            <RadioButton x:Name="rdbZnizkaKwotowa"    Content="Kwotowa"    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="91,58,0,0" />
            <TextBox     x:Name="txtZapisZnizki"      Text=""              HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,78,0,0" TextWrapping="Wrap" Height="19" Width="154"/>
        </Grid>

        <Button x:Name="btnUsun"         Content="Usun" HorizontalAlignment="Left" Height="66" Margin="272,316,0,0" VerticalAlignment="Top" Width="201" Grid.Row="2"/>
        <Button x:Name="btnVat"          Content="VAT" HorizontalAlignment="Left" Margin="272,382,0,0" Grid.Row="2" VerticalAlignment="Top" Width="201" Height="61"/>
        <Label  x:Name="lblPodsumowanie" Content="Label" HorizontalAlignment="Left" Height="33" Margin="51,448,0,0" VerticalAlignment="Top" Width="422" Background="Darkred" Grid.Row="2"/>
        <Button x:Name="btnPodsumowanie" HorizontalAlignment="Left" Margin="47,486,0,0" VerticalAlignment="Top" Width="426" Height="30" Grid.Row="2"></Button>


    </Grid>
</Window>
