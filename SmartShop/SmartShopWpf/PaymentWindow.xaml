<Window x:Class="SmartShopWpf.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartShopWpf"
        mc:Ignorable="d"
        Background="{StaticResource White}"
        ResizeMode="NoResize"
        Title="PaymentWindow" Height="350" Width="510">

    <Grid Background="{StaticResource FrameToDiscount}" Height="310" Width="490">
        <Label  x:Name="lblTitle"   HorizontalAlignment="Left" VerticalAlignment="Top" Height="45"  Width="436" Margin="26,18,0,0"  Background="{StaticResource Orange}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource White}" Content="Wybierz sposób płatności"   Style="{StaticResource LblFont26}"    HorizontalContentAlignment="Center" />

        <Button x:Name="btnPay"    HorizontalAlignment="Left" VerticalAlignment="Top" Height="43" Width="293"  Margin="100,185,0,0" Background="{StaticResource Red}" BorderThickness="1,1,1,1" BorderBrush="{StaticResource White}" Content="Zapłać" Style="{StaticResource BtnFontRed12.5}" Click="btnPay_Click" />

    </Grid>
</Window>
